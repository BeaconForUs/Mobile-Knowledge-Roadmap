<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_test_constraint_layout_at_most"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Test ConstraintLayout with mode AT_MOST"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_test_constraint_layout_exactly"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_constraint_layout_at_most"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Test ConstraintLayout with mode EXACTLY"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_test_traditional_layout_at_most"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_constraint_layout_exactly"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Test TraditionalLayout with mode AT_MOST"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_test_traditional_layout_exactly"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_traditional_layout_at_most"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Test TraditionalLayout with mode EXACTLY"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_test_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_test_traditional_layout_exactly"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>